<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.puremvc</groupId>
	<artifactId>PureMVC_Java_MultiCore</artifactId>
	<version>1.0.9.2-touchtribe</version>
	<packaging>jar</packaging>
	<name>PureMVC_Java_MultiCore</name>
    <repositories>
        <repository>
            <id>external</id>
            <url>http://maven.techtribe.nl/nexus/content/groups/external</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>external</id>
            <url>http://maven.techtribe.nl/nexus/content/groups/external</url>
        </pluginRepository>
    </pluginRepositories>
	<description>
		PureMVC is a lightweight framework for creating applications
		based upon the classic Model-View-Controller design
		meta-pattern. This is a Java port of the AS3 reference
		implementation of the MultiCore Version. It supports modular
		programming through the use of Multiton Core actors (instead of
		the Singletons used in the Standard Version).
	</description>
	<url>http://trac.puremvc.org/PureMVC_Java_MultiCore</url>
	<licenses>
		<license>
			<name>
				Reuse governed by Creative Commons Attribution 3.0
				United States License
			</name>
			<url>http://creativecommons.org/licenses/by/3.0/us/</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<url>http://svn.puremvc.org/PureMVC_Java_MultiCore</url>
	</scm>

	<build>
		<sourceDirectory>${basedir}/src</sourceDirectory>
		<resources>
			<resource>
				<directory>src</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<developers>
		<developer>
			<id>aquinault</id>
			<name>Anthony Quinault</name>
			<email>anthony.quinalt@puremvc.org</email>
			<url>http://puremvc.org</url>
			<organization>PureMVC Project</organization>
			<organizationUrl>http://puremvc.org</organizationUrl>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
	<dependencies>
        <dependency>
            <groupId>android</groupId>
            <artifactId>android</artifactId>
            <version>1.6_r3</version>
            <scope>provided</scope>
        </dependency>
	</dependencies>
	<distributionManagement>
        <repository>
            <id>thirdparty</id>
            <name>Internal Releases</name>
            <url>http://maven.techtribe.nl/nexus/content/repositories/thirdparty/</url>
        </repository>
	</distributionManagement>
</project>